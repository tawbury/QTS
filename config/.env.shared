###########################################################################
# .env.shared - QTS 공통 환경변수
# 모든 환경(local, docker, k8s)에서 공유하는 설정
# 경로(path)와 시크릿(secret)은 포함하지 않음
###########################################################################

###########################################################################
# Runtime
###########################################################################
TZ=Asia/Seoul
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

###########################################################################
# Service
###########################################################################
SERVICE_PORT=8001
QTS_ENV=development

###########################################################################
# Database (non-secret)
###########################################################################
DB_PORT=5432
DB_NAME=qts
# DB_HOST → 환경별 (.env.local=localhost, .env.container=postgres)
# DB_USER, DB_PASSWORD → .env (로컬/Docker) 또는 SealedSecret (K8s)

###########################################################################
# Broker Configuration
###########################################################################
BROKER_TYPE=kiwoom
TRADING_MODE=PAPER
ENABLE_REAL_ORDER=N
# Broker Credentials → .env (로컬/Docker) 또는 SealedSecret (K8s)
# KIWOOM_VTS_APP_KEY, KIWOOM_VTS_APP_SECRET, KIWOOM_VTS_ACCOUNT_NO

###########################################################################
# Observer Integration
###########################################################################
OBSERVER_DATA_READ_ONLY=true
# OBSERVER_DATA_DIR → 환경별 (.env.local, .env.container)

###########################################################################
# Logging (환경별 override 가능)
###########################################################################
LOG_LEVEL=INFO
LOG_FORMAT=json

###########################################################################
# Pipeline Configuration
###########################################################################
PIPELINE_INTERVAL_MS=1000
PIPELINE_ERROR_BACKOFF_MS=5000

###########################################################################
# Safety Layer
###########################################################################
PIPELINE_PAUSED=false
KILL_SWITCH_ENABLED=true
FAILSAFE_ENABLED=true
